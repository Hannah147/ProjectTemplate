<Window x:Class="ProjectTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">


    <TabControl TabStripPlacement="Top">

        <TabItem Name="AddMovie" Header="Add Movie" Width="100">
            <Grid>
                <Label x:Name="lblAddHeading" Content="Add Movie" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Width="160" Height="49" FontSize="30"/>
                <Label x:Name="lblMovieName" Content="Movie Name" HorizontalAlignment="Left" Margin="30,54,0,0" VerticalAlignment="Top" Width="162"/>
                <TextBox x:Name="tbxMovieName" HorizontalAlignment="Left" Height="24" Margin="28,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                <Label x:Name="lblMovieGenre" Content="Movie Genre" HorizontalAlignment="Left" Margin="28,124,0,0" VerticalAlignment="Top" Width="162"/>
                <ComboBox x:Name="cbxGenre" HorizontalAlignment="Left" Margin="28,155,0,0" VerticalAlignment="Top" Width="160"/>
                <Label x:Name="lblMovieDesc" Content="Movie Description" HorizontalAlignment="Left" Margin="30,201,0,0" VerticalAlignment="Top" Width="162"/>
                <TextBox x:Name="tbxDescription" HorizontalAlignment="Left" Height="71" Margin="30,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="162"/>
                <Button x:Name="btnAddWatch" Content="Add to Watchlist" HorizontalAlignment="Left" Margin="32,322,0,0" VerticalAlignment="Top" Width="160" Click="btnAddWatch_Click"/>
            </Grid>
        </TabItem>

        <TabItem Name="MovieWatchlist" Header="Movie Watchlist" Width="100">
            <Grid>
                <Label x:Name="lblWatchlist" Content="Watchlist" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top" Width="196" Height="49" FontSize="30"/>
                <Label Content="Genre" HorizontalAlignment="Left" Margin="30,58,0,0" VerticalAlignment="Top" FontSize="18"/>
                <ComboBox x:Name="cbxGenreSort" HorizontalAlignment="Left" Margin="93,66,0,0" VerticalAlignment="Top" Width="120" Height="26" SelectionChanged="CbxGenreSort_SelectionChanged"/>
                <ListBox x:Name="lbxWatchlist" HorizontalAlignment="Left" Height="191" Margin="30,112,0,0" VerticalAlignment="Top" Width="196" SelectionChanged="lbxWatchlist_SelectionChanged"/>
                <Label Content="Description" HorizontalAlignment="Left" Margin="30,310,0,0" VerticalAlignment="Top"/>
                <TextBlock x:Name="tblkDescription" HorizontalAlignment="Left" Margin="30,336,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" Height="51"/>
                <Label x:Name="lbl" Content="Rating" HorizontalAlignment="Left" Margin="371,158,0,0" VerticalAlignment="Top" Width="54" FontSize="15"/>
                <ComboBox x:Name="cbxAddRating" HorizontalAlignment="Left" Margin="354,193,0,0" VerticalAlignment="Top" Width="96"/>
                <Button x:Name="btnAdd" Content="&gt;&gt; Add &gt;&gt;" HorizontalAlignment="Left" Margin="354,242,0,0" VerticalAlignment="Top" Width="96" Click="btnAdd_Click"/>
                <Label x:Name="lblWatched" Content="Watched" HorizontalAlignment="Left" Margin="570,0,0,0" VerticalAlignment="Top" Width="142" Height="49" FontSize="30"/>
                <Label Content="Rating" HorizontalAlignment="Left" Margin="570,58,0,0" VerticalAlignment="Top" FontSize="18"/>
                <ComboBox x:Name="cbxRatingFilter" HorizontalAlignment="Left" Margin="646,66,0,0" VerticalAlignment="Top" Width="120" Height="26" SelectionChanged="CbxRatingFilter_SelectionChanged"/>
                <ListBox x:Name="lbxWatched" HorizontalAlignment="Left" Height="191" Margin="570,112,0,0" VerticalAlignment="Top" Width="196" SelectionChanged="lbxWatched_SelectionChanged"/>
                <Label Content="Rating" HorizontalAlignment="Left" Margin="570,310,0,0" VerticalAlignment="Top"/>
                <TextBlock x:Name="tblkRating" HorizontalAlignment="Left" Margin="570,340,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="51"/>

            </Grid>
        </TabItem>

    </TabControl>
